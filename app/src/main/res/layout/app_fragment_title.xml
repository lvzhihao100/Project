<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".FragmentTitleCustom"></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_ColorPrimary"
        android:translationZ="2dp"
        android:elevation="2dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_ColorPrimary"
            android:gravity="center_vertical"
            app:layout_height="@{88}">

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@{30}"
                android:layout_marginRight="@{20}"
                android:onClick="onClick"
                android:scaleType="fitXY"
                android:src="@mipmap/app_white_add"
                app:layout_height="@{30}"
                app:layout_width="@{30}"></ImageView>

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_add"
                android:scaleType="fitXY"
                android:src="@mipmap/app_white_search"
                app:layout_height="@{30}"
                app:layout_width="@{30}"></ImageView>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="易企点工业互联网平台"
                android:textColor="@color/white"
                android:textSize="@{22}" />
        </RelativeLayout>
    </LinearLayout>
</layout>