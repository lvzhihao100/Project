<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.eqdd.yiqidian.ui.EmailPasswordGetActivity">

    <data class=".EmailPasswordGetActivityCustom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_ColorPrimary"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include
            android:id="@+id/include_title"
            layout="@layout/library_activity_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入邮箱验证码："
                android:inputType="number"
                android:maxLength="4"
                android:singleLine="true"
                android:textColorHint="@color/hint_color"
                app:layout_height="@{80}"
                app:layout_width="@{560}" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="36dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:singleLine="true"
                android:textColorHint="@color/hint_color"
                app:layout_height="@{80}"
                app:layout_width="@{560}" />

            <EditText
                android:id="@+id/et_password_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="36dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:singleLine="true"
                android:textColorHint="@color/hint_color"
                app:layout_height="@{80}"
                app:layout_width="@{560}" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/library_select_btn_blue"
                android:onClick="onClick"
                android:text="提交"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</layout>
